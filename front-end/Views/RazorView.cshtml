<html>
<head>
    <link rel="stylesheet" href="style.css" />
    <script type="text/javascript">

        // This javascript method calls C# by setting the browser
        // to a URL with a custom scheme that is registered in C#.
        // All values are sent to C# as part of the querystring
        function InvokeCSharpWithFormValues(elm) {
            var qs = "";
            var elms = elm.form.elements;

            for (var i = 0; i < elms.length; i++) {
                qs += "&" + elms[i].name + "=" + elms[i].value;
            }

            if (elms.length > 0)
                qs = qs.substring(1);

            location.href = "hybrid:" + elm.name + "?" + qs;
        }

        // This javascript method is called from C#
        function SetLabelText(text) {
            var elm = document.getElementById('label');
            elm.innerHTML = text;
        }
    </script>
</head>
<body>
    <div data-role="page" data-theme="b">
        <form>

            <div data-role="content">

                <h1 id="label"></h1>

                <div>
                    id:
                    <input type="text" id="textbox" name="textbox" value="1" />
                </div>
                <div>
                    url:
                    <input type="text" id="textbox_url" name="textbox_url" value="http://192.168.1.4:5000" />
                </div>

                <input type="button" name="Toggle" value="Click" onclick="InvokeCSharpWithFormValues(this)" />

            </div>

        </form>
    </div>
</body>
</html>	